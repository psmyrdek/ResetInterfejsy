@model IEnumerable<ResetAth.AutofacMvc.Models.Post>
@{
	ViewBag.Title = "Wszystkie posty";
}

<h2>Wszystkie posty</h2>
<hr />

<div class="row">
	<div class="col-md-3">
		<div class="panel panel-default">
			<div class="panel-heading">
				Dodaj nowy post
			</div>
			@using (Html.BeginForm("Add", "Post", FormMethod.Post))
			{
				<div class="panel-body">
					<div class="form-group">
						<label for="Title">Tytuł</label>
						<input type="text" name="Title" class="form-control" />
					</div>
					<div class="form-group">
						<label for="PathToImage">Ścieżka do zdjęcia</label>
						<input type="text" name="PathToImage" class="form-control" />
					</div>
					<div class="form-group">
						<label for="Content">Treść posta</label>
						<textarea name="Content" class="form-control"></textarea>
					</div>
				</div>
				<div class="panel-footer">
					<button type="submit" class="btn btn-success">Dodaj</button>
				</div>
			}
		</div>
	</div>
	<div class="col-md-8 col-md-offset-1">
		@foreach (var post in Model)
		{
			Html.RenderPartial("_SinglePost", post);
		}
	</div>
</div>
